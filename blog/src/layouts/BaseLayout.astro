---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Blog by Ihor Andrianov' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="author" content="Ihor Andrianov">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="theme-color" content="#1a1d3a">
</head>
<body>
  <div class="container">
    <slot />
  </div>
</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --neon-blue: lch(70% 75 265);
    --neon-lime: lch(78% 85 130);
    --neon-gold: lch(80% 75 95);
    --text-primary: lch(90% 3 0);
    --text-secondary: lch(55% 15 270);
    --bg-dark: lch(8% 10 275);
    --accent: lch(82% 80 130);
  }

  body {
    font-family: 'Courier New', monospace;
    background: var(--bg-dark);
    color: var(--text-primary);
    min-height: 100vh;
    padding: 2rem;
    line-height: 1.7;
  }

  .container {
    max-width: 750px;
    width: 100%;
    margin: 0 auto;
  }

  a {
    color: var(--neon-lime);
    text-decoration: none;
    border-bottom: 1px solid var(--neon-lime);
    transition: all 0.3s ease;
  }

  a:hover {
    color: var(--accent);
    border-bottom-color: var(--accent);
  }

  h1 {
    font-size: 2.5rem;
    color: var(--neon-blue);
    margin-bottom: 0.5rem;
    font-weight: bold;
    letter-spacing: 1px;
  }

  h2 {
    color: var(--neon-lime);
    margin: 1.5rem 0 0.8rem;
    font-weight: bold;
    font-size: 1.5rem;
  }

  h3 {
    color: var(--neon-lime);
    margin: 1.2rem 0 0.6rem;
    font-size: 1.2rem;
  }

  p {
    margin-bottom: 1rem;
  }

  ul, ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  li {
    margin: 0.3rem 0;
  }

  code {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
  }

  pre {
    background: rgba(0, 0, 0, 0.3);
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
    margin: 1rem 0;
  }

  pre code {
    background: none;
    padding: 0;
  }

  blockquote {
    border-left: 3px solid var(--neon-lime);
    padding-left: 1rem;
    margin: 1rem 0;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    body {
      padding: 1rem;
    }
  }
</style>
